{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ingredient</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ ingredient.id }}</td>
        </tr>
        <tr>
            <th>Denomination</th>
            <td>{{ ingredient.denomination }}</td>
        </tr>
        <tr>
            <th>Dishes component ingredient</th>
            <td>
                <ul>{% for recipe in ingredient.recipes %}
                        {% for dish in recipe.dishes %}
                            <li><a href="{{ path('dish_show') }}">{{ dish.id }} / {{ dish.title }}</li>
                        {% endfor %}
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>


    <ul>
        <li>
            <a href="{{ path('ingredient_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
