{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ingredient</h1>

    <table>
        <tbody>
        <tr>
            <td><img src="{{ ingredient.urlimage }}" width="200" height="200"></td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ ingredient.id }}</td>
        </tr>
        <tr>
            <th>Denomination</th>
            <td>{{ ingredient.denomination }}</td>
        </tr>
        <tr>
            <th>Recipes using this ingredient</th>
            <td>
                <ul>{% for recipe in ingredient.recipes %}
                        recipe_id: {{ recipe.id }}
                    {% endfor %}
                    {#{% for dish in recipe.dish %}#}
                        {#<li><a href="{{ path('dish_show') }}">{{ dish.id }} / {{ dish.title }}</li>#}
                        {#<p>hello1</p>#}
                    {#{% endfor %}#}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>


    <ul>
        <li>
            <a href="{{ path('ingredient_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
