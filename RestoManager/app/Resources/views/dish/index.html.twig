{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dishes list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Ingredients included</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td><a href="{{ path('dish_show', { 'id': dish.id }) }}">{{ dish.id }}</a></td>
                <td>{{ dish.title }}</td>
                <td>{{ dish.description }}</td>
                <td>${{ dish.price }}</td>
                <td>
                    <ul>
                        {% for recipe in dish.recipes %}
                            {% for ingredient in recipe.ingredient %}
                                <li>
                                    <a href="{{ path('ingredient_show', { 'id': ingredient.id }) }}">{{ ingredient.denomination }}</a>
                                </li>
                            {% endfor %}
                        {% endfor %}
                    </ul>
                <td>
                    <button class="button"><a href="{{ path('dish_show', { 'id': dish.id }) }}">show</a></button>
                    </br>
                    <button class="button"><a href="{{ path('dish_edit', { 'id': dish.id }) }}">edit</a></button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dish_new') }}">Create a new dish</a>
        </li>
    </ul>
{% endblock %}
