{% extends 'base.html.twig' %}

{% block body %}

        <h1>ADMIN ACTIONS</h1>

        <p>{{ 'now' | localizeddate('full', 'none') }}</p>

        <h2>Taking an order</h2>
    {% for dish in dishes %}
            <ul>
                    <li>{{ dish.title }}
                            <label for="Dish">| Quantity :</label>
                            <input type="number" value="0" min="1" max="100"></li>
            </ul>
    {% endfor %}

        <button id="_submit">Submit</button>

    <h2>Managing...</h2>
        <a href="/user" class="btn1 flex-c-m size1 txt3 trans-0-4">
                Waiters</a></br>

        <a href="/dish" class="btn1 flex-c-m size1 txt3 trans-0-4">
                Dishes</a></br>

        <a href="/ingredient" class="btn1 flex-c-m size1 txt3 trans-0-4">
                Ingredients</a>
{% endblock %}